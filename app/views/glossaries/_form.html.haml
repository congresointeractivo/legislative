= form_for @glossary do |f|
  - if @glossary.errors.any?
    #error_explanation
      %h2= "#{pluralize(@glossary.errors.count, "error")} prohibited this glossary from being saved:"
      %ul
        - @glossary.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :term
    = f.text_field :term
  .field
    = f.label :definition
    = f.text_area :definition
  .actions
    = f.submit 'Save'
